<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turborent_background"
    tools:context=".activities.owner.CreateListingActivity">

    <LinearLayout
        android:id="@+id/create_listing_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <!-- Back button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/turborent_logout"
            android:layout_marginEnd="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/create_listing_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/turborent_primary_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Brand -->
        <EditText
            android:id="@+id/brand_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand (e.g. Tesla)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- Model -->
        <EditText
            android:id="@+id/model_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model (e.g. Model 3)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- Color -->
        <EditText
            android:id="@+id/color_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color (e.g. Black)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- License Plate -->
        <EditText
            android:id="@+id/license_plate_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="License Plate (e.g. ABD123)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textCapCharacters"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- Rental cost per day -->
        <EditText
            android:id="@+id/rental_cost_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price per day (e.g. 250.00)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- City -->
        <EditText
            android:id="@+id/city_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City (e.g. Winnipeg)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- Address -->
        <EditText
            android:id="@+id/address_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address (e.g. 1485 Portage Avenue)"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textPostalAddress"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="12dp" />

        <!-- Photo URL -->
        <EditText
            android:id="@+id/photo_url_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Photo URL"
            android:background="@color/turborent_input_bg"
            android:padding="12dp"
            android:inputType="textUri"
            android:textColor="@color/turborent_primary_text"
            android:textColorHint="@color/turborent_hint"
            android:layout_marginBottom="24dp" />


            <!-- Create button -->
            <Button
                android:id="@+id/create_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/turborent_primary"
                android:layout_marginStart="8dp" />


    </LinearLayout>

</ScrollView>
