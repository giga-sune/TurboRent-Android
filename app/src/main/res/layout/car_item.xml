<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@color/turborent_input_bg">

    <!-- Car photo -->
    <ImageView
        android:id="@+id/car_imageview"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:contentDescription="Car photo" />

    <!-- Right side: texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingLeft="12dp">

        <!-- Brand + Model -->
        <TextView
            android:id="@+id/car_title_textvieW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tesla Model 3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/turborent_primary_text" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <!-- License plate + price row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- License plate -->
            <TextView
                android:id="@+id/license_plate_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ABD123"
                android:textSize="14sp"
                android:textColor="@color/turborent_primary_text" />

            <!-- Price per day -->
            <TextView
                android:id="@+id/price_per_day_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250/day"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/turborent_primary_text" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
