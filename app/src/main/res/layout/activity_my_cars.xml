<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_cars_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/turborent_background"
    tools:context=".activities.owner.MyCarsActivity">


    <!-- Back button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/turborent_logout"
        android:layout_marginEnd="8dp" />


    <!-- Title -->
    <TextView
        android:id="@+id/my_cars_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cars"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/turborent_primary_text"
        android:layout_marginTop="32dp" />

    <!-- Spacer so the title can breathe -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- RecyclerView for car listings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_cars_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
